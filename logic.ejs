<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>All shows | RASSEYE!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link href="/css/navbar.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  </head>

  <body>

    <div class="container">

      <div class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">RASSEYE!</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li class="active"><a href="/logic">All shows</a></li>
              <li><a href="/new">New show</a></li>
            </ul>
          </div>
        </div>
      </div>

      <h1>Shows:</h1>
      <div class="list-group" style="width: 75%">
	<% var dataParsed = JSON.parse(data);
	   for (var i = 0; i < dataParsed.length; i++) {
	     var link = "/show/" + dataParsed[i]["_id"]; %>
	   <a class="list-group-item" href="<%= link %>">
	     <%= dataParsed[i]["artist_name"] %> in <%= dataParsed[i]["place"] %>
	   </a>
	<% } %>
      </div>
      <a class="btn btn-primary" href="/new">Add a new show</a>
    </div>

  </body>
</html>
